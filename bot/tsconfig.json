{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node"],
    "paths": {
      "@/*": ["../*"]
    },
    "baseUrl": "."
  },
  "include": ["./**/*.ts", "./telegram/**/*.ts", "../lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
